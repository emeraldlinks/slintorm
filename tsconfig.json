  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",                 
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",   
    "types": ["node"],
  },
  "include": [
    "src"
  ]
  
}
