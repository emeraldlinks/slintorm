{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".", // keep root as project root
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist", // all .d.ts files go to dist
    "types": ["node"],
    "jsx": "preserve",
    "jsxImportSource": "ripple"
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "src", "example.ts"]
}
